<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/speakers_entry_height"
    android:foreground="?android:attr/selectableItemBackground"
    tools:layout_width="@dimen/speakers_entry_width">

    <ImageView
        android:id="@+id/speakers_list_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_account_circle_grey_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="?colorPrimaryDark"
        android:alpha="0.8"
        android:padding="4dp">

        <TextView
            android:id="@+id/speakers_list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            tools:ignore="SpUsage"
            tools:text="Paresh Mayani" />

        <TextView
            android:id="@+id/speakers_list_designation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            tools:ignore="SpUsage"
            tools:text="Technical Lead" />

        <TextView
            android:id="@+id/speakers_list_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            tools:ignore="SpUsage"
            tools:text="India" />

    </LinearLayout>
</FrameLayout>
