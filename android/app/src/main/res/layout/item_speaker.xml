<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:paddingBottom="10dp"
    android:background="?attr/selectableItemBackground"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/speaker_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/speaker_image"
        android:scaleType="centerCrop"
        android:src="@drawable/default_user" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/speaker_name"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/speakers_listview_primary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/speaker_info"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="150dp"
                android:layout_marginRight="4dp"
                android:textColor="@color/speakers_listview_secondary" />

            <ImageView
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:src="@drawable/fill_circle"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/speaker_info_country"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginLeft="4dp"
                android:textColor="@color/speakers_listview_secondary" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>